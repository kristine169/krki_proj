{
  "compilerOptions": {
  "target": "ES2016",
  "module": "CommonJS",
  "outDir": "./dist",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "baseUrl": "./",
  "paths": {
    "@logic/*": ["src/logic/*"],
    "@types/*": ["src/types/*"]
  }
},
"include": ["src/**/*", "tests/**/*"],
"exclude": ["node_modules"]
}